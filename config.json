{
  "$schema": "./config.schema.json",
  "version": "1.0.0",
  "tools": {
    "solarwinds-logs": {
      "packageId": "DealerVision.SolarWindsLogSearch",
      "version": "2.2.10",
      "command": "logs",
      "source": "local",
      "sources": {
        "local": {
          "type": "local",
          "path": "tools/solarwinds-logs"
        },
        "nuget-private": {
          "type": "nuget",
          "url": "https://pkgs.dev.azure.com/YOUR_ORG/_packaging/YOUR_FEED/nuget/v3/index.json",
          "comment": "Replace with your private NuGet feed URL"
        },
        "github-packages": {
          "type": "nuget",
          "url": "https://nuget.pkg.github.com/YOUR_ORG/index.json",
          "comment": "Replace with your GitHub Packages feed"
        }
      },
      "requiredEnvVars": [
        "SOLARWINDS_API_TOKEN"
      ]
    }
  },
  "agents": {
    "claude": {
      "skillsPath": {
        "windows": "%USERPROFILE%\\.claude\\skills",
        "linux": "~/.claude/skills",
        "darwin": "~/.claude/skills"
      }
    },
    "codex": {
      "skillsPath": {
        "windows": "%USERPROFILE%\\.codex\\skills",
        "linux": "~/.codex/skills",
        "darwin": "~/.codex/skills"
      }
    }
  }
}
